---
import { SITE_TITLE } from "../config";

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css"
      integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV"
      crossorigin="anonymous"
    />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <a href="/" class="blog-title">{SITE_TITLE}</a>
        <div class="nav-links">
          <a href="/about" class={currentPath === "/about" ? "active" : ""}
            >About</a
          >
          <a
            href="/posts"
            class={currentPath.startsWith("/posts") ? "active" : ""}>Posts</a
          >
          <a
            href="/tags"
            class={currentPath.startsWith("/tags") ? "active" : ""}>Tags</a
          >
        </div>
      </nav>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --text-color: #333;
    --bg-color: #fff;
    --border-color: #e0e0e0;
    --link-color: #0066cc;
    --link-hover: #0052a3;
    --gray-text: #666;
    --tag-bg: #f0f0f0;
    --code-bg: #f5f5f5;
    --max-width: 800px;
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --text-color: #e0e0e0;
      --bg-color: #1a1a1a;
      --border-color: #404040;
      --link-color: #6eb3ff;
      --link-hover: #8fc5ff;
      --gray-text: #a0a0a0;
      --tag-bg: #2a2a2a;
      --code-bg: #2a2a2a;
    }
  }

  body {
    font-family:
      -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue",
      Arial, sans-serif;
    line-height: 1.6;
    color: var(--text-color);
    background-color: var(--bg-color);
  }

  header {
    border-bottom: 1px solid var(--border-color);
    padding: 1rem 0;
    margin-bottom: 2rem;
  }

  nav {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .blog-title {
    font-size: 1.5rem;
    font-weight: bold;
    text-decoration: none;
    color: var(--text-color);
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  nav a {
    text-decoration: none;
    color: var(--link-color);
    transition: color 0.2s;
  }

  nav a:hover,
  nav a.active {
    color: var(--link-hover);
  }

  main {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 1rem 3rem;
    min-height: calc(100vh - 200px);
  }

  footer {
    border-top: 1px solid var(--border-color);
    padding: 2rem 1rem;
    text-align: center;
    color: var(--gray-text);
    font-size: 0.9rem;
  }

  h1 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
  }

  h2 {
    font-size: 1.5rem;
    margin: 2rem 0 1rem;
  }

  a {
    color: var(--link-color);
    text-decoration: none;
  }

  a:hover {
    color: var(--link-hover);
    text-decoration: underline;
    text-underline-offset: 0.2em;
  }

  .post-list {
    list-style: none;
  }

  .post-item {
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-color);
  }

  .post-item:last-child {
    border-bottom: none;
  }

  .post-meta {
    color: var(--gray-text);
    font-size: 0.9rem;
  }

  .post-title {
    font-size: 1.5rem;
    margin-top: 0.25rem;
    margin-bottom: 0.5rem;
  }

  .post-title a {
    color: var(--text-color);
    text-decoration: none;
  }

  .post-title a:hover {
    color: var(--link-color);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .tag {
    display: inline-block;
    font-size: 0.85rem;
    color: var(--link-color);
    text-decoration: none;
  }

  .tag::before {
    content: "#";
  }

  .tag:hover {
    color: var(--link-hover);
    text-decoration: underline;
    text-underline-offset: 0.2em;
  }

  .all-posts-link {
    display: inline-block;
    margin-top: 2rem;
    font-size: 1rem;
  }

  .tag-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin: 2rem 0;
  }

  .tag-cloud-item {
    display: inline-block;
  }

  .tag-cloud-link {
    font-size: 1rem;
    color: var(--link-color);
    text-decoration: none;
  }

  .tag-cloud-link::before {
    content: "#";
  }

  .tag-cloud-link:hover {
    color: var(--link-hover);
    text-decoration: underline;
    text-underline-offset: 0.2em;
  }

  .tag-count {
    color: var(--gray-text);
    font-size: 0.85rem;
    margin-left: 0.3rem;
  }
</style>
